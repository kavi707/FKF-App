<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fkf.commercial"
          android:versionCode="11"
          android:versionName="1.2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="15"/>

    <supports-screens
        android:resizeable="true"
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"/>

    <application android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:icon="@drawable/app_icon">
        <provider
                android:name="com.fkf.commercial.database.dbprovider.DbContentProvider"
                android:authorities="com.fkf.commercial.database.dbprovider.DbContentProvider" >
        </provider>

        <activity android:name="com.fkf.commercial.WelcomeActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        <activity android:name="com.fkf.commercial.templates.LoginActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fkf.commercial.templates.RegisterActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fkf.commercial.templates.RecipesActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.fkf.commercial.templates.SingleRecipeActivity"
                  android:screenOrientation="portrait"/>
    </application>
</manifest> 
