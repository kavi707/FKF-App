<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
            android:id="@+id/menu"
            android:layout_height="fill_parent"
            android:layout_width="225dp"
            android:background="#ff000000"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/logUserLayout"
                android:layout_height="50dp"
                android:layout_width="225dp"
                android:orientation="horizontal"
                >

            <ImageView
                    android:id="@+id/userIconImageView"
                    android:src="@drawable/default_user_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            <TextView
                    android:layout_height="match_parent"
                    android:layout_width="125dp"
                    android:id="@+id/userNameTextView"
                    android:gravity="center"
                    android:text="Welcome"/>

            <ImageButton
                    android:id="@+id/logoutButton"
                    android:src="@drawable/logout_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#ffffffff"/>

        <ListView
                android:id="@+id/menu_item_list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/content"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:background="@color/brown">

            <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/states"
                    android:src="@drawable/options"
                    android:contentDescription="@string/app_name"/>

            <TextView
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="24dip"
                    android:paddingTop="10dip"
                    android:gravity="center"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#ffffffff"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="horizontal">

            <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/search"
                    android:id="@+id/searchRecipeImageButton"
                    android:layout_marginLeft="1dp"/>

            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchRecipeEditText"
                    android:layout_marginTop="2dp"
                    android:hint="@string/search_recipe_label"/>

        </LinearLayout>

        <ScrollView
                android:id="@+id/latestAndPopularScrollBar"
                android:fillViewport="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/first_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/latestYummyLabel"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                        android:id="@+id/horizontalScroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <ImageButton
                                    android:id="@+id/firstYummyImageButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Button1"/>

                            <TextView
                                    android:id="@+id/firstYummyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text View"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <ImageButton
                                    android:id="@+id/secondYummyImageButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Button2"/>

                            <TextView
                                    android:id="@+id/secondYummyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text View"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <ImageButton
                                    android:id="@+id/thirdYummyImageButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Button3"/>

                            <TextView
                                    android:id="@+id/thirdYummyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text View"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <ImageButton
                                    android:id="@+id/forthYummyImageButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Button4"/>

                            <TextView
                                    android:id="@+id/forthYummyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text View"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <ImageButton
                                    android:id="@+id/fifthYummyImageButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Button5"/>

                            <TextView
                                    android:id="@+id/fifthYummyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Text View"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/popularYummyLabel"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:background="@color/black"
                        android:layout_height="1dp"/>

                <!--popular yummys : yummy 1-->
                <LinearLayout
                        android:id="@+id/firstPopularYummyLinear"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/fkf"
                            android:id="@+id/firstPopularRecipeImageView"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Large Text"
                                android:id="@+id/firstPopularRecipeNameTextView"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium Text"
                                android:id="@+id/firstPopularRecipeDescriptionTextView"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?android:attr/ratingBarStyleSmall"
                                android:id="@+id/firstPopularRecipeRatingBar"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left|center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:layout_width="fill_parent"
                        android:background="@color/black"
                        android:layout_height="1dp"/>

                <!-- popular yummys : yummy 2 -->
                <LinearLayout
                        android:id="@+id/secondPopularYummyLinear"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/fkf"
                            android:id="@+id/secondPopularRecipeImageView"/>

                    <LinearLayout
