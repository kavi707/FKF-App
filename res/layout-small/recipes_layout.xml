                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium Text"
                                android:id="@+id/secondPopularRecipeDescriptionTextView"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left"/>

                        <TextView
