                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_width="wrap_content"
