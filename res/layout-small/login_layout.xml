<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/login_240_320"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="370dp">
                <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="New EditText"
                        android:id="@+id/usernameEditText"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="125dp"/>

                <EditText android:layout_width="250dp"
                          android:layout_height="wrap_content"
                          android:password="true"
                          android:text="New EditText"
                          android:id="@+id/passwordEditText"
                          android:layout_alignLeft="@+id/usernameEditText"
                          android:layout_below="@+id/usernameEditText"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/loginButtonLabel"
                        android:id="@+id/loginButton"
                        android:textColor="@color/white"
                        android:background="@color/green"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignLeft="@+id/usernameEditText"
                        android:layout_below="@+id/passwordEditText"
                        android:layout_alignRight="@+id/usernameEditText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orTextLabel"
                        android:textSize="18dp"
                        android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                        android:layout_marginTop="290dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recipesTextLabel"
                        android:textSize="18dp"
                        android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                        android:layout_marginTop="325dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/brown"
                    android:layout_gravity="left|center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accountCreateTextLabel"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"/>
                <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="@string/registerButtonLabel"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/green"
                        android:id="@+id/registerButton"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="210dp"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>