<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_normal"
    android:gravity="bottom"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spaceTextView"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/usernameLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/username_icon" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:focusableInTouchMode="true"
                    android:hint="@string/usernameLabel"
                    android:typeface="normal" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:id="@+id/passwordLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password_icon" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:focusableInTouchMode="true"
                    android:hint="@string/passwordLabel"
                    android:password="true"
                    android:typeface="normal" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/login_btn_background"
                android:text="@string/loginButtonLabel"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <!-- get ui space -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- get ui space -->

            <TextView
                android:id="@+id/orTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/orTextLabel"
                android:textSize="22dp"
                android:typeface="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/browsRecipesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/recipesTextLabel"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:typeface="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/footer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="35dp"
                    android:text="@string/accountCreateTextLabel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14dp"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/register_btn_background"
                    android:text="@string/registerButtonLabel"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:typeface="normal" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>