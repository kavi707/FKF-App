                    android:layout_height="wrap_content"
                    android:background="@drawable/full_version_btn_background"
                    android:src="@drawable/full_version_btn" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#ffffffff" />

        <TextView
            android:id="@+id/menuHomeTextView"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/category_list_background"
            android:gravity="center_vertical"
            android:text="  Home"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/normal_gray"
            android:typeface="normal" />

        <LinearLayout
            android:id="@+id/menuMyFavoriteLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/category_list_background"
            android:orientation="horizontal">

            <ImageView
