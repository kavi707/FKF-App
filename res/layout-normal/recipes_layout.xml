<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >
    <LinearLayout
            android:id="@+id/menu"
            android:layout_height="fill_parent"
            android:layout_width="225dp"
            android:background="#ff000000"
            android:orientation="vertical" >
        <LinearLayout
                android:id="@+id/logUserLayout"
                android:layout_height="50dp"
                android:layout_width="225dp"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/userIconImageView"
                android:src="@drawable/default_user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="125dp"
                android:id="@+id/userNameTextView"
                android:gravity="center"
                android:text="Welcome"/>
            <ImageButton
                    android:id="@+id/logoutButton"
                    android:src="@drawable/logout_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#ffffffff" />
        <ListView
                android:id="@+id/menu_item_list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/content"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:background="#ff313131" >
            <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/states"
                    android:src="@drawable/options"
                    android:contentDescription="@string/app_name" />
            <TextView
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff5f5f5"
                    android:textSize="24dip"
                    android:paddingTop="14dip"
                    android:gravity="center" />
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#ffffffff" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal">
            <ImageButton
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/search"
                    android:id="@+id/searchRecipeImageButton"
                    android:layout_marginLeft="1dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchRecipeEditText"
                android:layout_marginTop="2dp"
                android:hint="@string/search_recipe_label"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/first_content"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:orientation="vertical" >

            <HorizontalScrollView
                    android:id="@+id/horizontalScroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <ImageButton
                                android:id="@+id/firstYummyImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button1" />
                        <TextView
                                android:id="@+id/firstYummyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text View" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <ImageButton
                                android:id="@+id/secondYummyImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button2" />
                        <TextView
                                android:id="@+id/secondYummyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text View" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <ImageButton
                                android:id="@+id/thirdYummyImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button3" />
                        <TextView
                                android:id="@+id/thirdYummyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text View" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <ImageButton
                                android:id="@+id/forthYummyImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button4" />
                        <TextView
                                android:id="@+id/forthYummyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text View" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <ImageButton
                                android:id="@+id/fifthYummyImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button5" />
                        <TextView
                                android:id="@+id/fifthYummyTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Text View" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                <ListView
                        android:id="@+id/recipeItemList"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>