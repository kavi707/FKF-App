<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="670dp">
        <EditText
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="New EditText"
                android:id="@+id/usernameEditText"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="285dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="55dp"/>

        <EditText android:layout_width="370dp"
                  android:layout_height="wrap_content"
                  android:password="true"
                  android:text="New EditText"
                  android:id="@+id/passwordEditText"
                  android:layout_alignLeft="@+id/usernameEditText"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="360dp"
                  android:layout_alignRight="@+id/usernameEditText"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/loginButtonLabel"
                android:id="@+id/loginButton"
                android:textColor="@color/white"
                android:background="@color/green"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/usernameEditText"
                android:layout_alignParentTop="true"
                android:layout_marginTop="430dp"
                android:layout_alignRight="@+id/usernameEditText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orTextLabel"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="530dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipesTextLabel"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="595dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/brown"
            android:layout_gravity="left|center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accountCreateTextLabel"
                android:layout_alignParentLeft="true"
                android:textSize="22dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true" android:id="@+id/textView"/>
        <Button
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:text="@string/registerButtonLabel"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/green"
                android:id="@+id/registerButton"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="325dp"
                android:layout_alignBaseline="@+id/textView"/>
    </RelativeLayout>
</LinearLayout>