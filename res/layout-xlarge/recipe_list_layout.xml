<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/gray"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:typeface="normal"
            android:id="@+id/searchRecipeListEditText"
            android:layout_marginTop="2dp"
            android:hint="@string/search_recipe_label"/>

        <ImageButton
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/search"
            android:layout_marginTop="2dp"
            android:id="@+id/searchRecipeListImageButton"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:background="@drawable/category_name_textview_background"
            android:textSize="18dip"
            android:typeface="normal"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/yummyCategoryNameTextView"/>

        <ListView
            android:id="@+id/recipeItemList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
    </LinearLayout>
</LinearLayout>